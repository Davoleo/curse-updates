  "scripts": {
    "bot": "node build/main.js",
    "lint": "eslint . --ext .ts",
    "build": "tsc",
    "studio": "prisma studio",
    "bot+reload": "node build/commandEntrypoint.js -- --reload"
  },
  "prisma": {
    "seed": "node prisma/seed.cjs"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Davoleo/curse-updates.git"
  },
  "keywords": [
    "discord",
    "bot",
    "curseforge",
    "minecraft",
    "mod",
    "modpack"
  ],
  "type": "module",
  "author": "Davoleo",
